<?xml version="1.0" encoding="UTF-8"?>
<persistence
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="hibernate"
		transaction-type="RESOURCE_LOCAL">
		<class>hwu.elixir.scrape.db.crawl.CrawlRecord</class>
		<properties>
			<!-- Database connection settings -->
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/scrapeDB?allowPublicKeyRetrieval=true&amp;useSSL=false" />

			<property name="javax.persistence.jdbc.user" value="scrapeDBUsername" />
			<property name="javax.persistence.jdbc.password"
				value="scrapeDBPassword" />

			<!-- SQL dialect -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL5Dialect" />

			<!-- Create/update tables automatically using mapping metadata -->
			<property name="hibernate.hbm2ddl.auto" value="create" />

			<!-- Pretty print the SQL in the log file and console -->
			<property name="hibernate.show_sql" value="false" />

		</properties>

	</persistence-unit>
</persistence>
